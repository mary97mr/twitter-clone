<% layout("layouts/boilerplate") %>
<div class="row">
    <h1 class="text-center">New Tweet</h1>
    <div class="col-6 offset-3">
        <form action="/tweets" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="description">Share what's in your mind</label>
                <textarea class="form-control" name="tweet[description]" id="description" cols="30" rows="4"
                    placeholder="What's happening?" required></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Where are you?</label>
                <input class="form-control" type="text" name="tweet[location]" id="location" placeholder="location"
                    required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Add an image to your tweet</label>
                <input class="form-control" type="text" name="tweet[image]" id="image" placeholder="image" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="d-flex">
                <a class="text-danger" href="/tweets">Cancel</a>
                <button class="btn btn-sm btn-outline-primary ms-auto rounded-pill">tweet</button>
            </div>
        </form>
    </div>
</div>