<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-8 col-lg-6">
        <div class="card mb-3">
            <div class="card-header">
                <a class="my-auto" href="/tweets"><i class="fas fa-arrow-left ms-3"></i></a>
                Twittear
            </div>
            <div class="row mt-2">
                <div class="col-10 offset-1 d-flex">
                    <img class="rounded-circle text-center p-0 m-1" src="<%= tweet.image %>" width="60 px"
                        height="60 px">
                    <div class="my-auto ms-3">
                        <h5 class="card-title m-0"><b><%= tweet.author.name %></b></h5>
                        <span>@<%= tweet.author.username %></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-10 offset-1">
                    <p class="card-text">
                        <%= tweet.description %> Lorem ipsum, dolor sit amet consectetur
                            adipisicing
                            elit. Modi quod dolorem nostrum officia temporibus quos qui porro totam ipsa tenetur cum
                            sequi,
                            magni ullam atque doloremque eligendi itaque? Quam, optio!
                    </p>
                    <!-- Displaying Carousel if array images is not empty -->
                    <% if (tweet.images.length >= 1) { %> 
                    <div id="tweetCarousel" class="carousel slide" data-bs-ride="carousel">
                        <ol class="carousel-indicators">
                            <% tweet.images.forEach((img, i ) => { %> 
                            <li data-bs-target="#tweetCarousel" data-bs-slide-to="<%= i %>" class="active"></li>
                            <% }) %> 
                        </ol>
                        <div class="carousel-inner">
                            <% tweet.images.forEach((img, i ) => { %> 
                            <div class="carousel-item <%= (i === 0) ? "active" : "" %> "> 
                                <img src="<%= img.url %> " class=" img-fluid img-thumbnail mb-2" alt="...">
                            </div>
                            <% }); %> 
                        </div>
                        <% if (tweet.images.length > 1) {  %> 
                        <a class="carousel-control-prev" href="#tweetCarousel" role="button" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#tweetCarousel" role="button" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </a>
                        <% } %> 
                    </div>
                    <% } %> 
                    <ul class="list-group list-group-flush mb-2">
                        <li class="list-group-item">
                            <%= tweet.location %>
                        </li>
                        <li class="list-group-item text-muted"><%= moment(tweet.createdAt).format("lll")%> </li>
                    </ul>
                    <% if(currentUser && tweet.author.equals(currentUser._id)) { %> 
                    <div class="card-body d-flex my-0 pt-0">
                        <form action="/tweets/<%= tweet._id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-sm btn-danger">DELETE</button>
                        </form>
                    </div>
                    <% } %> 
                </div>
            </div>
            <div class="card-footer">
                <div class="row text-center">
                    <div class="col"><i class="far fa-comment"></i>
                        <% if (tweet.comments.length >= 1) {%> 
                            <%= tweet.comments.length %>
                        <% } %> 
                    </div>
                    <div class="col"><i class="fas fa-retweet"></i> 25</div>
                    <div class="col"><i class="fas fa-heart"></i> 5.380</div>
                    <div class="col"><i class="fas fa-share-alt"></i></div>
                </div>
            </div>
        </div>
        <!--Comment section-->
        <div class="card" style="border-left: 4px solid green;">
            <% if(currentUser) { %> 
            <div class="d-flex justify-content-between my-3">                
                <h5 class="card-title ps-3">Comment Section. <i class="fas fa-comment"></i></h5>
                <!-- Comment button that is used for collapsing-->
                <button class="btn btn-primary btn-sm me-2" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapseComment" aria-expanded="false" aria-controls="collapseComment">
                    Comment
                </button>
            </div>
            <!--Collapse Add a comment form -->
            <div class="collapse my-3" id="collapseComment">
                <div class="card card-body col-10 offset-1">
                    <form id="add-comment-form" action="/tweets/<%= tweet._id %>/comments" method="POST"
                        class="validated-form" novalidate>
                        <div class="mb-3">
                            <input class="form-control" type="text" disabled value=" <%= currentUser.username %>">
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" placeholder="Tweetea tu respuesta" cols="70" rows="5" form="add-comment-form" name="comment[body]" required></textarea>
                            <div class="valid-feedback">Looks Good</div>
                        </div>
                        <button type="submit" class="btn btn-success btn-sm">Post</button>
                    </form>
                </div>
            </div>
            <% } else { %>
            <div class="mt-3">
                <h5 class=" card-title ps-3">Comment Section. <i class="fas fa-comment"></i></h5>
                <p class="text-muted ps-3"> You need to <a href="/login">login</a> first.</p>                
            </div>
            <% } %> 
        </div>
        <div class="card mb-3">
        <!--Display comments by looping through them-->
        <% for(let comment of tweet.comments) { %>
            <div class="card-body">
                <div class="row">
                    <div class="col-2">
                        <img class="rounded-circle me-auto p-0 m-1" src="<%= tweet.image %>" width="60 px" height="60 px">
                    </div>
                    <div class="col-10">
                        <div class="my-auto ms-1 d-flex">
                            <p class="card-title m-0">
                                <b> <%= comment.author.name %></b>
                                <span class="text-muted m-0">@<%= comment.author.name %> Â· </span>
                                <span class="text-muted m-0">
                                    <%= moment(comment.createdAt).fromNow() %>
                                </span>
                            </p>
                            <% if(currentUser && comment.author.equals(currentUser._id)) { %> 
                            <div class="dropdown me-1 m-auto">
                                <button type="button" class="btn btn-light " id="dropdownMenuOffset" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v"></i></button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuOffset">
                                    <!-- Delete comment button-->
                                    <li>
                                        <form action="/tweets/<%=tweet._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                            <button class="dropdown-item" type="submit">Delete</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                            <% } %> 
                        </div>
                        <div>
                            <p> <%= comment.body %> </p>
                        </div>
                        <div class="row text-center">
                            <div class="col"><i class="far fa-comment"></i> 9</div>
                            <div class="col"><i class="fas fa-retweet"></i> 25</div>
                            <div class="col"><i class="fas fa-heart"></i> 5.380</div>
                            <div class="col"><i class="fas fa-share-alt"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="my-0">
        <% } %>
        </div>
    <!-- Comment section END -->
    </div>
    <div class="col-lg-2"></div>
</div>