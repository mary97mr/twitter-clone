<% layout("layouts/boilerplate") %>
<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1 col-xl-8 offset-xl-2">
            <!-- Profile Info -->
            <div class="card shadow rounded">
                <div class="card-header fw-bold text-capitalize"> <%= user.name %> </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <img src="<%= user.image.url %>" alt="" class="img-thumbnail rounded-circle" id="img-profile">
                        <!-- Button edit Profile modal -->
                        <% if(currentUser && user._id.equals(currentUser._id)) { %> 
                        <div><button type="button" class="btn btn-outline-primary rounded-pill fw-bold" data-bs-toggle="modal" data-bs-target="#editProfileModal">Edit profile</button></div>
                        <% } %> 
                    </div>
                    <div class="mb-2">
                        <h5 class="text-capitalize fw-bold"> <%= user.name %> </h5>
                        @<%= user.username %>
                    </div>
                    <div class="mb-2">
                        <p><%= user.biography %></p>
                        <% if(user.location){ %>  
                            <span class="text-muted"><i class="fas fa-map-marker-alt"></i> <%= user.location %></span>
                        <% } %> 
                    </div>
                    <div class="mb-3 d-flex">
                        <p class="fw-bold me-1">135</p>
                        <span class="text-muted me-3">Followers</span>
                        <p class="fw-bold me-1">335</p>
                        <span class="text-muted me-3">Following</span>                          
                    </div>
                </div>
            </div>
            <!-- Edit Profile Modal -->
            <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModal" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title fw-bold" id="editProfileModal">Edit Profile</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/<%= user._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Name</label>
                                    <input class="form-control" type="text" name="user[name]" id="name" value="<%= user.name %>" placeholder="john" required>
                                    <div class="valid-feedback">Looks Good!</div>
                                </div>
                                <div class="mb-3">
                                    <label for="biography" class="form-label">Biography</label>
                                    <input class="form-control" type="text" name="user[biography]" id="biography" maxlength="160" value="<%= user.biography %>" placeholder="About you">
                                    <div class="valid-feedback">Looks Good!</div>
                                </div>
                                <div class="mb-3">
                                    <label for="location" class="form-label">Location</label>
                                    <input class="form-control" type="text" name="user[location]" id="location" value="<%= user.location %>" placeholder="London, UK" maxlength="30">
                                    <div class="valid-feedback">Looks Good!</div>
                                </div>
                                <div class="mb-3">
                                    <label for="image" class="form-label">Profile picture</label>
                                    <input class="form-control" type="file" name="image" id="image">
                                    <div class="invalid-feedback fw-bold">You must add profile picture.</div>
                                </div>
                                <div class="modal-footer ">
                                    <button type="submit" class="btn btn-primary rounded-pill fw-bold">Save changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Displaying tweets of user -->
            <div class="card">
                <% for(let tweet of tweets) { %>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2">
                                <img class="rounded-circle me-auto p-0 m-1" src="<%= tweet.author.image.url %>" width="60 px" height="60 px">
                            </div>
                            <div class="col-10">
                                <div class="my-auto ms-1 d-flex">
                                    <p class="card-title m-0">
                                        <b> <%= tweet.author.name %></b>
                                        <span class="text-muted m-0">@<%= tweet.author.name %> Â· </span>
                                        <span class="text-muted m-0">
                                            <%= moment(tweet.createdAt).fromNow() %> -
                                        </span>
                                        <a href="/tweets/<%= tweet._id %>" class=" fw-bold ms-2">view</a>
                                    </p>
                                    <% if(currentUser && tweet.author.equals(currentUser._id)) { %> 
                                    <div class="dropdown me-1 m-auto">
                                        <button type="button" class="btn btn-light " id="dropdownMenuOffset" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v"></i></button>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuOffset">
                                            <!-- Delete reply button-->
                                            <li>
                                                <form action="/tweets/<%=tweet._id%>?_method=DELETE" method="POST">
                                                    <button class="dropdown-item" type="submit">Delete</button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                    <% } %> 
                                </div>
                                <div>
                                    <p> <%= tweet.description %> </p>
                                </div>
                                <!-- Displaying Carousel if array images is not empty -->
                                <% if (tweet.images.length >= 1) { %> 
                                <div id="tweetCarousel" class="carousel slide" data-bs-ride="carousel">
                                    <ol class="carousel-indicators">
                                        <% tweet.images.forEach((img, i ) => { %> 
                                        <li data-bs-target="#tweetCarousel" data-bs-slide-to="<%= i %>" class="active"></li>
                                        <% }) %> 
                                    </ol>
                                    <div class="carousel-inner">
                                        <% tweet.images.forEach((img, i ) => { %> 
                                        <div class="carousel-item <%= (i === 0) ? "active" : "" %> "> 
                                            <img src="<%= img.url %> " class=" img-fluid img-thumbnail mb-2" alt="...">
                                        </div>
                                        <% }); %> 
                                    </div>
                                    <% if (tweet.images.length > 1) {  %> 
                                    <a class="carousel-control-prev" href="#tweetCarousel" role="button" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#tweetCarousel" role="button" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </a>
                                    <% } %> 
                                </div>
                                <% } %> 
                                <div class="d-flex justify-content-between">
                                    <button class="border-0 btn btn-outline-light rounded-circle text-secondary"><i class="far fa-comment"></i> 22</button>   
                                    <button class="border-0 btn btn-outline-light rounded-circle text-secondary"><i class="fas fa-retweet"></i> 25</button> 
                                    <button class="border-0 btn btn-outline-light rounded-circle text-secondary"><i class="fas fa-heart"></i> 5.380</button> 
                                    <button class="border-0 btn btn-outline-light rounded-circle text-secondary"><i class="fas fa-share-alt"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-0">
                <% } %> 
            </div>
        </div>
    </div>
</div>