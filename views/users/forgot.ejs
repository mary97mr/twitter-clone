<% layout("layouts/boilerplate") %>
<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">
            <div class="card shadow rounded">
                <div class="card-body">
                    <h1 class="text-center mb-4">Forgot</h1>
                    <form action="/forgot" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" name="email" id="email" placeholder="email" autofocus required>
                            <div class="valid-feedback">Looks Good!</div>
                        </div>
                        <button class="btn w-100 btn-primary" type="submit">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>