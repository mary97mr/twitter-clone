<% layout("layouts/boilerplate") %>
<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">
            <div class="card shadow rounded">
                <div class="card-body">
                    <h1 class="text-center mb-4">Login</h1>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" name="username" id="username" placeholder="username" required autofocus>
                            <div class="valid-feedback">Looks Good!</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" name="password" id="password" placeholder="password" required>
                            <div class="valid-feedback">Looks Good!</div>
                        </div>
                        <button class="btn w-100 btn-primary" type="submit">Login</button>
                    </form>
                    <p class="mt-3 text-center"> Don't have an account? <a href="/register">Sign up.</a></p>
                    <p class="mt-3 text-center"><a href="/forgot">Forgot your password?</a></p>
                </div>
            </div>
        </div>
    </div>
</div>