<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header">
                <a class="my-auto" href="/twitter/home"><i class="fas fa-arrow-left mx-3"></i></a>
                Twittear
            </div>
            <div class="row mt-2">
                <div class="col-10 offset-1 d-flex">
                    <img class="rounded-circle text-center p-0 m-1" src="<%= tweet.author.image.url %>" width="60 px"
                        height="60 px">
                    <div class="my-auto ms-3">
                        <h5 class="card-title m-0"><b><%= tweet.author.name %></b></h5>
                        <span>@<%= tweet.author.username %></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-10 offset-1">
                    <p class="card-text"> <%= tweet.description %> </p>
                    <!-- Displaying Carousel if array images is not empty -->
                    <% if (tweet.images.length >= 1) { %> 
                    <div id="tweetCarousel" class="carousel slide" data-bs-ride="carousel">
                        <ol class="carousel-indicators">
                            <% tweet.images.forEach((img, i ) => { %> 
                            <li data-bs-target="#tweetCarousel" data-bs-slide-to="<%= i %>" class="active"></li>
                            <% }) %> 
                        </ol>
                        <div class="carousel-inner">
                            <% tweet.images.forEach((img, i ) => { %> 
                            <div class="carousel-item <%= (i === 0) ? "active" : "" %> "> 
                                <img src="<%= img.url %> " class=" img-fluid img-thumbnail mb-2" alt="...">
                            </div>
                            <% }); %> 
                        </div>
                        <!-- Displaying controls ONLY if there's more than one img. -->
                        <% if (tweet.images.length > 1) {  %> 
                        <a class="carousel-control-prev" href="#tweetCarousel" role="button" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#tweetCarousel" role="button" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </a>
                        <% } %> 
                    </div>
                    <% } %> 
                    <ul class="list-group list-group-flush mb-2">
                        <li class="list-group-item"> <%= tweet.location %> </li>
                        <li class="list-group-item text-muted"><%= moment(tweet.createdAt).format("lll")%></li>
                        <li class="list-group-item d-flex"> 
                            <a class="text-decoration-none text-dark fw-bold me-4" href="">11 <span class="text-muted">Replies</span></a>
                            <a class="text-decoration-none text-dark fw-bold me-4" href="">22 <span class="text-muted">Retweets</span></a> 
                            <a class="text-decoration-none text-dark fw-bold" href="">  <span class="text-muted">Likes</span></a> 
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-evenly">
                    <!-- Button Reply used display collapsed form -->
                    <button class="btn btn-share-reply" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapseReply" aria-expanded="false" aria-controls="collapseReply">
                    <i class="far fa-comment"></i>
                    </button>
                    <!-- Retweet Button -->
                    <button class="btn btn-retweet"><i class="fas fa-retweet"></i></button>
                    <!-- Like buttons -->
                    <form action="/tweets/<%= tweet._id %>/like" method="POST">
                        <% if(currentUser && tweet.likes.some(like => { return like.equals(currentUser._id)})) {  %>
                        <button class="btn btn-like liked"><i class="fas fa-heart"></i></button>
                        <% } else { %>
                        <button class="btn btn-like"><i class="fas fa-heart"></i></button>
                        <% } %>
                    </form>
                    <button class="btn btn-share-reply"><i class="fas fa-share-alt"></i></button>
                    <% if(currentUser && tweet.author.equals(currentUser._id)) { %>
                    <form action="/tweets/<%= tweet._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-like liked"><i class="fas fa-trash text-danger"></i></button>
                    </form>
                    <% } %> 
                </div>
            </div>
        </div>
        <!--Reply section-->
        <!--Display replies by looping through them-->
        <% if (tweet.replies.length >= 1) { %> 
            <div class="card mb-3">           
            <% for(let reply of tweet.replies) { %>
                <div class="card-body">
                    <div class="row">
                        <div class="col-2">
                            <img class="rounded-circle me-auto p-0 m-1" src="<%= reply.author.image.url %>" width="60 px" height="60 px">
                        </div>
                        <div class="col-10">
                            <div class="my-auto ms-1 d-flex">
                                <p class="card-title m-0">
                                    <b> <%= reply.author.name %></b>
                                    <span class="text-muted m-0">@<%= reply.author.name %> Â· </span>
                                    <span class="text-muted m-0">
                                        <%= moment(reply.createdAt).fromNow() %> -
                                    </span>
                                    <a href="/tweets/<%= reply._id %>" class=" fw-bold ms-2">view</a>
                                </p>
                                <% if(currentUser && reply.author.equals(currentUser._id)) { %> 
                                <div class="dropdown me-1 m-auto">
                                    <button type="button" class="btn btn-light " id="dropdownMenuOffset" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v"></i></button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuOffset">
                                        <!-- Delete reply button-->
                                        <li>
                                            <form action="/tweets/<%=tweet._id%>/<%=reply._id %>?_method=DELETE" method="POST">
                                                <button class="dropdown-item" type="submit">Delete</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                                <% } %> 
                            </div>
                            <div><p> <%= reply.description %> </p></div>
                            <div class="d-flex justify-content-between">
                                <button class="btn btn-share-reply"><i class="far fa-comment"></i> 22</button>   
                                <button class="btn btn-retweet"><i class="fas fa-retweet"></i> 25</button>
                                <form action="/tweets/<%= reply._id %>/like" method="POST">
                                    <% if(currentUser && reply.likes.some(like => { return like.equals(currentUser._id)})) { %>
                                    <button class="btn btn-like liked"><i class="fas fa-heart"></i> 5.380</button>
                                    <% } else { %>
                                    <button class="btn btn-like"><i class="fas fa-heart"></i> 5.380</button>
                                    <% } %> 
                                </form>  
                                <button class="btn btn-share-reply"><i class="fas fa-share-alt"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="my-0">
            <% } %>
            </div>
        <% } %> 
    <!-- reply section END -->
    </div>
    <div class="col-lg-2"></div>
</div>
<!--Collapse reply tweet form -->
<div class="collapse my-3" id="collapseReply">
    <div class="card py-3">
        <div class=" card-body col-10 offset-1">
            <form id="add-reply-form" action="/tweets/<%= tweet._id %>" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <input class="form-control" type="text" disabled value="sdwed">
                </div>
                <div class="mb-3">
                    <textarea class="form-control" placeholder="Tweetea tu respuesta" cols="70" rows="5" form="add-reply-form" name="tweet[description]" required></textarea>
                    <div class="valid-feedback">Looks Good</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Where are you?</label>
                    <input class="form-control" type="text" name="tweet[location]" id="location"
                        placeholder="location" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Add an image to your tweet</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>
                <button type="submit" class="btn btn-success btn-sm">Post</button>
            </form>
        </div>
    </div>
</div>